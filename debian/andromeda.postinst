#!/bin/sh
set -e

configure() {
    # If there is no supplied image don't do anything as
    # we expect the user to do that manually
    if [ -e /usr/share/andromeda-images/system.img ]; then
        andromeda init || true
    fi
    andromeda upgrade -o || true
}

case "$1" in
	"configure")
		configure
		;;
esac

